# Rails logs and temp (keep placeholders)
/log/*
!/log/.keep
/tmp/*
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/.keep
/tmp/cache/*
!/tmp/cache/.keep
/tmp/sockets/*
!/tmp/sockets/.keep
/tmp/capybara/*
!/tmp/capybara/.keep

# Propshaft / Sprockets builds
/public/assets
/public/*.map
/public/.sprockets-manifest-*.json

# cssbundling-rails output (keep placeholder)
/app/assets/builds/*
!/app/assets/builds/.keep

# Active Storage (keep placeholder)
/storage/*
!/storage/.keep

# Node / package manager caches
/node_modules
/.yarn/*
/.pnp.*
/yarn-error.log
/npm-debug.log*
/pnpm-debug.log*

# Ruby tooling caches
/.rubocop-cache
/.rubocop-http*
/.solargraph
/.yardoc
/_yardoc

# IDE/editor
/.idea/
/.vscode/
/.fleet/
*.iml

# OS junk
.DS_Store
Thumbs.db

# Ignore tmp and cache in the nested Rails app (keep placeholders)
service_ticket_tracker/tmp/*
!service_ticket_tracker/tmp/.keep
service_ticket_tracker/tmp/cache/*
!service_ticket_tracker/tmp/cache/.keep


# Env / credentials (keep encrypted files, ignore keys)
/.env
/.env.local
/.env.*.local
/config/master.key
/config/credentials/*.key

# SQLite (safe to ignore even if using Postgres)
/db/*.sqlite3
/db/*.sqlite3-*
/db/*.sqlite3-journal

# Bundler
/.bundle/
/vendor/bundle
/.byebug_history
/.pry_history
<%= form_with(model: ticket, class: "space-y-6") do |form| %>
  <%# Keep modal flow on submit if modal=1 %>
  <% if params[:modal].present? %>
    <%= hidden_field_tag :modal, 1 %>
  <% end %>

  <% if ticket.errors.any? %>
    <div id="error_explanation" class="rounded-md border border-red-800 bg-red-900/60 p-4 text-red-200">
      <h2 class="mb-2 text-sm font-semibold"><%= pluralize(ticket.errors.count, "error") %> prevented saving:</h2>
      <ul class="list-disc pl-5 text-sm">
        <% ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    <div>
      <%= form.label :account_name, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :account_name, required: true, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :city, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :city, required: true, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :contact_person, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :contact_person, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :contact_info, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :contact_info, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :priority, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.select :priority, Ticket.priorities.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :work_type, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.select :work_type, [["", nil]] + Ticket.work_types.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div class="flex items-center space-x-2">
      <%= form.check_box :lease, class: "h-4 w-4 rounded border-gray-700 bg-gray-800 text-indigo-600" %>
      <%= form.label :lease, class: "text-sm text-gray-300" %>
    </div>

    <div class="flex items-center space-x-2">
      <%= form.check_box :under_warranty, class: "h-4 w-4 rounded border-gray-700 bg-gray-800 text-indigo-600" %>
      <%= form.label :under_warranty, class: "text-sm text-gray-300" %>
    </div>

    <div class="md:col-span-2">
      <%= form.label :machine_model_or_type, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :machine_model_or_type, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div class="md:col-span-2">
      <%= form.label :issue_description, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_area :issue_description, rows: 4, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :requesting_tech_name, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :requesting_tech_name, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :assigned_to, "Assigned user", class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.select :assigned_to,
                      options_from_collection_for_select(@users || User.order(:username, :id), :id, :username, ticket.assigned_to),
                      { include_blank: "Unassigned" },
                      class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :stage, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.select :stage, Ticket.stages.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100" %>
    </div>

    <div>
      <%= form.label :scheduled_date, "Scheduled date", class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :scheduled_date,
                          value: (ticket.scheduled_date&.to_s),
                          class: "js-scheduled-date block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100",
                          autocomplete: "off",
                          placeholder: "Pick a date" %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500"  %>
    <%= link_to "Back", tickets_path, class: "inline-flex items-center rounded-md border border-gray-700 px-4 py-2 text-sm font-semibold text-gray-100 hover:bg-gray-800" %>
  </div>
<% end %>
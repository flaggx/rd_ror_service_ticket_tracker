<div class="mt-3">
  <%= form_with(model: [ticket, TicketUpdate.new], local: true, class: "space-y-2") do |f| %>
    <div class="grid grid-cols-1 gap-2 md:grid-cols-6">
      <div class="md:col-span-2">
        <label class="mb-1 block text-xs font-medium text-gray-300">Your name</label>
        <%= f.text_field :user_name, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-sm text-gray-100" %>
      </div>
      <div class="md:col-span-6">
        <label class="mb-1 block text-xs font-medium text-gray-300">Add an update</label>
        <%= f.text_area :content, rows: 3, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-sm text-gray-100" %>
      </div>
    </div>
    <%= f.submit "Add Update", class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>
  <% end %>
</div>
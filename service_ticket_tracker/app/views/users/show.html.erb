<div class="mb-4 flex items-center justify-between">
  <h1 class="text-xl font-semibold text-gray-100"><%= @user.username %></h1>
  <div class="space-x-2">
    <%= link_to "Edit", edit_user_path(@user), class: "inline-flex items-center rounded-md border border-gray-700 px-3 py-2 text-sm font-semibold text-gray-100 hover:bg-gray-800" %>
    <%= button_to "Delete",
                  user_path(@user),
                  method: :delete,
                  form: { data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: "inline" },
                  class: "text-red-400 hover:text-red-300 text-sm bg-transparent p-0 border-0 underline cursor-pointer" %>
    <%= link_to "Back", users_path, class: "inline-flex items-center rounded-md bg-gray-700 px-3 py-2 text-sm font-semibold text-white hover:bg-gray-600" %>
  </div>
</div>

<div class="rounded-lg border border-gray-700 bg-gray-800 p-4">
  <dl class="grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
    <div>
      <dt class="text-sm font-medium text-gray-400">ID</dt>
      <dd class="mt-1 text-sm text-gray-100"><%= @user.id %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-400">Username</dt>
      <dd class="mt-1 text-sm text-gray-100"><%= @user.username %></dd>
    </div>
  </dl>
</div>
<div class="mb-4 flex items-center justify-between">
  <h2 class="text-xl font-semibold">Users</h2>
  <%= link_to "New User", new_user_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
</div>

<div class="overflow-hidden rounded-lg border border-gray-200 bg-white">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
    <tr>
      <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">ID</th>
      <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Username</th>
      <th class="px-4 py-3"></th>
    </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
    <% @users.each do |user| %>
      <tr>
        <td class="px-4 py-3 text-sm text-gray-900"><%= user.id %></td>
        <td class="px-4 py-3 text-sm text-gray-900"><%= user.username %></td>
        <td class="px-4 py-3 text-right space-x-2">
          <%= link_to "Show", user, class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
          <%= link_to "Edit", edit_user_path(user), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
          <%= link_to "Delete", user, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 text-sm" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
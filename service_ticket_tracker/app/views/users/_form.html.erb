<%= form_with(model: user, class: "space-y-6") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="rounded-md border border-red-200 bg-red-50 p-4">
      <h2 class="mb-2 text-sm font-semibold text-red-800"><%= pluralize(user.errors.count, "error") %> prevented saving:</h2>
      <ul class="list-disc pl-5 text-sm text-red-700">
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    <div class="md:col-span-1">
      <%= form.label :username, class: "mb-1 block text-sm font-medium text-gray-700" %>
      <%= form.text_field :username, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div class="md:col-span-1">
      <%= form.label :password, class: "mb-1 block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <p class="mt-1 text-xs text-gray-500">Leave blank to keep existing password</p>
    </div>

    <div class="md:col-span-1">
      <%= form.label :password_confirmation, class: "mb-1 block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    <%= link_to "Back", users_path, class: "inline-flex items-center rounded-md border border-gray-300 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-50" %>
  </div>
<% end %>
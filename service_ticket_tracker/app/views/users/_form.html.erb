<%= form_with(model: user, class: "space-y-6") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="rounded-md border border-red-800 bg-red-900/60 p-4 text-red-200">
      <h2 class="mb-2 text-sm font-semibold"><%= pluralize(user.errors.count, "error") %> prevented saving:</h2>
      <ul class="list-disc pl-5 text-sm">
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    <div class="md:col-span-1">
      <%= form.label :username, class: "mb-1 block text-sm font-medium text-gray-300" %>
      <%= form.text_field :username, class: "block w-full rounded-md border-gray-700 bg-gray-800 text-gray-100 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
    <%= link_to "Back", users_path, class: "inline-flex items-center rounded-md border border-gray-700 px-4 py-2 text-sm font-semibold text-gray-100 hover:bg-gray-800" %>
  </div>
<% end %>
<div class="mb-4 flex items-center justify-between">
  <h2 class="text-xl font-semibold text-gray-100">Users</h2>
  <%= link_to "New User", new_user_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
</div>

<div class="overflow-hidden rounded-lg border border-gray-700 bg-gray-800">
  <table class="min-w-full divide-y divide-gray-700">
    <thead class="bg-gray-900">
    <tr>
      <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">ID</th>
      <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Username</th>
      <th class="px-4 py-3"></th>
    </tr>
    </thead>
    <tbody class="divide-y divide-gray-700 bg-gray-800">
    <% @users.each do |user| %>
      <tr>
        <td class="px-4 py-3 text-sm text-gray-100"><%= user.id %></td>
        <td class="px-4 py-3 text-sm text-gray-100"><%= user.username %></td>
        <td class="px-4 py-3 text-right space-x-2">
          <%= link_to "Show", user, class: "text-indigo-400 hover:text-indigo-300 text-sm" %>
          <%= link_to "Edit", edit_user_path(user), class: "text-indigo-400 hover:text-indigo-300 text-sm" %>
          <%= button_to "Delete",
                        user_path(user),
                        method: :delete,
                        form: { data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: "inline" },
                        class: "text-red-400 hover:text-red-300 text-sm bg-transparent p-0 border-0 underline cursor-pointer" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
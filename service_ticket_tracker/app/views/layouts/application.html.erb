<!DOCTYPE html>
<html class="dark">
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Service Ticket Tracker" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  <!-- Flatpickr (calendar) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

  <script>
      // Global initializer: call this any time new content is added (incl. modal)
      window.initScheduledPicker = function initScheduledPicker() {
          if (!window.flatpickr) return;
          document.querySelectorAll(".js-scheduled-date").forEach(function(el) {
              if (el.dataset.fpApplied) return; // avoid double-init
              window.flatpickr(el, {
                  dateFormat: "Y-m-d",      // Rails-friendly (YYYY-MM-DD)
                  altInput: true,
                  altFormat: "M j, Y",      // Pretty display format
                  allowInput: true
              });
              el.dataset.fpApplied = "1";
          });
      };

      // Initialize on initial load and on Turbo navs
      document.addEventListener("DOMContentLoaded", window.initScheduledPicker);
      document.addEventListener("turbo:load", window.initScheduledPicker);
      document.addEventListener("turbo:render", window.initScheduledPicker);
  </script>
</head>
<body class="bg-gray-900 text-gray-100">
<header class="bg-gray-800 border-b border-gray-700">
  <div class="mx-auto max-w-7xl px-4 py-4 flex items-center justify-between">
    <h1 class="text-xl font-semibold">Service Ticket Tracker</h1>
    <nav class="space-x-4">
      <%= nav_link_to "Board", board_tickets_path %>
      <%= nav_link_to "Tickets", tickets_path %>
      <%= nav_link_to "Users", users_path %>
    </nav>
  </div>
</header>

<main class="mx-auto max-w-7xl px-4 py-6">
  <% if notice.present? %>
    <div class="mb-4 rounded-md border border-green-800 bg-green-900/60 px-4 py-3 text-green-200">
      <%= notice %>
    </div>
  <% end %>
  <% if alert.present? %>
    <div class="mb-4 rounded-md border border-red-800 bg-red-900/60 px-4 py-3 text-red-200">
      <%= alert %>
    </div>
  <% end %>

  <%= yield %>
</main>
</body>
</html>